		// 	"properties": {
		// 		"roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('akvRoleIdMapping')[variables('akvSecretsUserRoleName')])]",
		// 		"principalId": "[reference(resourceId('Microsoft.Synapse/workspaces', parameters('synapseName')), '2018-06-01', 'full').identity.principalId]",
		// 		"principalType": "ServicePrincipal"
		// 	},
		// 	"dependsOn": [
		// 		"[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]",
		// 		"[resourceId('Microsoft.Synapse/workspaces', parameters('synapseName'))]"
		// 	],
